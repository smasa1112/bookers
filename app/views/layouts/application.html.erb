<!DOCTYPE html>
<html>
  <head>
    <title>Booker2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a href="/" class="navbar-brand">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse show" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "Home", user_path(current_user), class:"fas fa-home nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "Users", users_path, class:"fas fa-users nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "Books", books_path, class:"fas fa-book-open nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "logout", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-light" %>
                </li>
              <% else %>
                <li>
                  <%= link_to "Home", root_path, class:"fas fa-home nav-link text-light"%>
                </li>
                <li>
                  <%= link_to "About", about_path, class:"fas fa-link nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "sign up", new_user_registration_path, class:"fas fa-user-plus nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "login", new_user_session_path, class:"fas fa-sign-in-alt nav-link text-light"%>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <!--ログインしている場合のみ検索フォームを出現させる-->
      <% if user_signed_in? %>
        <div class="container mt-3">
          <div class="row">
            <div class="col">
              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <div class="form-group form-row">
                  <%= f.text_field :keyword,value: @keyword, placeholder:"input words",class:"form-group col-3" %>
                  <%= f.select :model, {"User":0,"Book":1,"Category":2}, {selected: 0}, {class:"form-control col-2 offset-1", required: true} %>
                  <%= f.select :match, {"完全一致":"complete","前方一致":"forward","後方一致":"backward", "部分一致":"partial"}, {selected: 0}, {class:"form-control col-2 offset-1", required: true} %>
                  <%= f.submit "検索", class:"btn btn-primary col-2 offset-1"%>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <!--ログインなど各動作の成功メッセージ-->
      <p id="notice"><%= notice %></p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        	<div class="row">
          	<div class="mx-auto">
          		<p>CopyRight Infratop.inc</p>
          	</div>
          </div>
        </div>
    </footer>
  </body>
</html>
