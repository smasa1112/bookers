<h2 class="mt-3">New book</h2>
<div>
  <%= form_with model: new_book, url: books_path, local:true do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class:"form-control" %>
    </div>
    <div class="form-group">
      <label for="book_category">Category</label>
      <%= f.text_field :category, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :tag_list, "タグ(,で複数指定できます)" %>
      <%= f.text_field :tag_list, value: new_book.tag_list.join(',') ,class:"form-control tag_form" %>
    </div>
    <div class="form-group" id="evaluate_stars">
      <label>評価</label>
    </div>
    <div class="form-group">
      <%= f.submit "Create Book", class:"btn btn-success" %>
    </div>
  <% end %>
</div>

<%= javascript_include_tag "tag_addition" %>
<script>
  $('#evaluate_stars').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'book[evaluation]' ,//登録するモデル名とカラム名を記述
    half: true
  });
</script>