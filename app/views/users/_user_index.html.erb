<h2>Users</h2>
<%= link_to "グループを作成する", new_group_path %> | <%= link_to "グループ一覧", groups_path %>
<table class="table">
  <thead>
    <th>image</th>
    <th>name</th>
    <th></th>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %>
        </td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.follows.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td><%= link_to "Show",user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

