<%= form_with url: number_of_post_path, method: :get, remote:true do |f| %>
 <div class="form-row my-2">
    <div class="col">
      <%= f.hidden_field :user_id, value: user.id %>
      <%= f.date_field :post_date, class:"form-control" %>
    </div>
    <div class="col">
      <%= f.submit "検索", class:"btn btn-primary"%>
    </div>
  </div>
<% end %>

<div class="result">
</div>