<% if current_user != user %>
  <% if user.follow?(current_user) and current_user.follow?(user) %>
    <!--相互フォローの場合のみチャットルームが表示されるようにする-->
    <% if is_room %>
      <%= link_to "チャットへ", room_path(room.id) %>
    <% else %>
      <%= form_with model: room, url: rooms_path do |f| %>
        <%= fields_for entry do |e| %>
          <%= e.hidden_field :user_id, value: user.id %>
        <% end %>
        <%= f.submit "チャットを始める" ,class:"btn btn-success"%>
      <% end %>
    <% end %>
  <% end %>
<% end %>
