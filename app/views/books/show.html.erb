
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/user_info", user: @book.user %>
      <%= render "layouts/new_book", new_book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <div class="detail__table">
        <%= render "detail", book: @book %>
      </div>


      <h2>Comment</h2>
      <p><%= @book.book_comments.count %>Comments</p>

      <div class="comment__table">
        <%= render "book_comments/table", book_comments: @book.book_comments %>
      </div>

      <div class="new_comment">
        <%= form_with(model:[@book, @comment], remote: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, rows:"5" ,placeholder:"Write comment here", class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "送信", class:"btn btn-success", id: "comment__textarea "  %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>