<div class="container">
  <%=render "layouts/error_explanation", model: @group %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Create Group</h1>
      <%= form_with model: @group, url: groups_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "グループ名" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "紹介文" %>
          <%= f.text_area :introduction, autofocus: true, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :image, "グループ画像" %>
          <%= f.attachment_field :image, class:"form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.submit "Create Group", class:"btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>