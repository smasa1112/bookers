<h2>Group Detail</h2>
<table class="table">
  <thead>
    <th></th>
    <th>グループ名</th>
    <th>紹介文</th>
    <th>メンバー</th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to group_path(group.id) do %>
          <%= attachment_image_tag group, :image, :fill, 40,40, format:"jpeg", fallback:"no_image.jpg", size:"40x40" %>
        <% end %>
      </td>
      <td>
        <%= link_to group.name, group_path(group.id) %>
      </td>
      <td>
        <%= group.introduction %>
      </td>
      <td></td>
      <td>
        <% if current_user.id==group.owner_id %>
          <%= link_to "Edit", edit_group_path(group), class:"btn btn-success" %>
        <% elsif group.user_join?(current_user) %>
          <%= link_to "Leave the group", group_users_path(group_id: group.id), method: :delete, class:"btn btn-danger" %>
        <% else %>
          <%= link_to "Join the group", group_users_path(group_id: group.id), method: :post, class: "btn btn-success" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>